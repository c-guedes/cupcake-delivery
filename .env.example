# Configurações de Produção para o Sistema de Delivery de Cupcakes

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cupcake_delivery
DB_USER=cupcake_user
DB_PASSWORD=your-secure-database-password-here

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-at-least-32-chars

# Server
PORT=8080
GIN_MODE=release

# CORS (ajuste conforme seu domínio)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Security
BCRYPT_COST=12

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
